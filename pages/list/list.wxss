/** list.wxss **/
@import "../../lib/weui.wxss";

.page-section{
  margin-bottom: 20rpx;
}

.posts-title {
  height: 40px;
  width: 95%;
  line-height: 50px;
  margin-left: 10px;
  border-bottom: 1px gray solid
}

.flex-wrp {
  display: flex;
  height: 70px;
  flex-direction: row;
  margin: 10px 10px;
}

.expret {
  font-size: 8px;
  color: gray;
}

.abstract {
  font-size: 8px;
  height:28px;
  width:100%;
}

.title {
  width: 100%;
  white-space: nowrap;
  text-overflow:ellipsis;
  overflow: hidden;
}

.thumbnail_images {
  width: 100%;
  height: 60px
}

.flex-item-image {
  width: 20%
}

.flex-item-content {
  width: 75%;
  margin-left: 10px;
}

.item-container {
  margin: 5rpx 5rpx;
  position: relative;
}

.posts-container {
  
}

.cover {
  width: 100%;
  height: 400rpx;
  display: block;
}

.desc {
  margin: 10rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #E5E7ED;
}

.desc .left {
}

.desc .right {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.right image{
  display: block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}

swiper {
  height: 200px;
}

.slide-image {
  width: 100%;
}
